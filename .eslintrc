{
  "env": {
    "node": true,
    "es6": true
  },
  "parser": "vue-eslint-parser",
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {
      "vue": true
    }
  },
  "extends": [
    "plugin:vue-libs/recommended"
  ],
  "plugins": [
    "node",
    "vue"
  ],
  "globals": {
    "API_URL": true,
    "TNS_ENV": true
  },
  rules: {
    "indent": ["error", 2, {
      "MemberExpression": "off"
    }],
    "node/no-extraneous-require": ["error", {
      "allowModules": [
        "@vue/cli-test-utils"
      ]
    }]
  },
  overrides: [
    {
      files: ['**/__tests__/**/*.js', "**/cli-test-utils/**/*.js"],
      rules: {
        "node/no-extraneous-require": "off"
      }
    }
  ]
}
